<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<!-- <property name="hibernate.connection.driver_class">org.postgresql.Driver</property> -->
		<property name="connection.driver_class">org.h2.Driver</property>
		<!-- <property name="connection.url">jdbc:postgresql://localhost:5432/santosdb</property> -->
		<!-- <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property> -->
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="connection.username">santos</property>
		<property name="connection.password">santos</property>
		<property name="connection.pool_size">1</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping resource="it/galeone_dev/hibernate/models/User.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/Machine.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/Client.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/History.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/JobOrder.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/NonWorkingDay.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/WorkingDay.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/AssignedJobOrders.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/Sampling.hbm.xml" />
		<mapping resource="it/galeone_dev/hibernate/models/Maintenance.hbm.xml" />
	</session-factory>
</hibernate-configuration>
